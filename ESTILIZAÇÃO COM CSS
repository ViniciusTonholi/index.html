            max-width: 800px;
            margin: 30px auto;
            background-color: floralwhite
            border-radius: 10px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
            color: #333;
        }

        input[type="file"] {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }

        input[type="submit"] {
